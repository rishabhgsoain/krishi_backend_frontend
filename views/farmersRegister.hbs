                <form action="/farmers/register" method="POST">
                    <!-- 2 column grid layout with text inputs for the first and last names -->
                    <div class="row">
                    {{!-- <div class="col-md-6 mb-4"> --}}
                        <div class="form-outline mb-4">
                        <input placeholder="Name" type="text" id="form3Example1" class="form-control" name="name" />

